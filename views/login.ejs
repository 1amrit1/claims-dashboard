<!DOCTYPE html>
<html lang="en">

<head>
    <meta
        charset="UTF-8">
    <meta
        http-equiv="X-UA-Compatible"
        content="IE=edge">
    <meta
        name="viewport"
        content="width=device-width, initial-scale=1.0">
    <link
        rel="stylesheet"
        type="text/css"
        href="css/login.css" />
    <title>
        Login
    </title>
</head>

<body>

    <div
        class="login-box">

        <h2>Login
        </h2>
        <h3
            id="errorH2">
            <% if(locals.error)
                { %>
                <div class="alert alert-danger"
                    role="alert">
                    <%= error
                        %>
                </div>
                <% }
                    %>

        </h3>
        <form
            method="POST"
            action="/loginCheck"
            class="form"
            id="">
            <div
                class="user-box">
                <input
                    class="input"
                    type="text"
                    id=""
                    required=""
                    name="userName">
                <label
                    class="label"
                    for="">Username</label>
            </div>
            <!-- /.user-box -->
            <div
                class="user-box">
                <input
                    class="input"
                    type="password"
                    id=""
                    required=""
                    name="password">
                <label
                    class="label"
                    for="">Password</label>
            </div>
            <!-- /.user-box -->
            <a
                href="javascript:void(0)">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                <input
                    id="inputSubmit"
                    type="submit"
                    value="Submit">
                <!-- Submit -->
            </a>
        </form>
        <!-- /form -->
 
    </div>
    <!-- /.login-box -->

</body>
<script>
</script>

</html>